#:kivy 1.0.9
<BattleGame>:
    player: player
    target: target
    Label:
        font_size: 40
        center_x: root.width // 4
        top: root.top - 50
        text: "Level:"+str(self.parent.level)
    Widget:
        pos: 0, root.height-10
        size: target.health*root.width/100, 10
        canvas:
            Color:
                rgb: (0.5,0,0.5)
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        font_size: 40
        center_x: 3*root.width // 4
        top: root.top - 50
        text: "Score:"+str(player.score)
    Player:
        id: player
        pos: (root.width//2-20, 50)
        size: 40,40
    Target:
        id: target
        pos: (root.width//2-30, 0)
        size: 60, 10

<Player>:
    canvas:
        Color:
            rgb: (0.3,0.8,0.3)
        Rectangle:
            pos:(self.x, self.y)
            size: (self.width, self.height)
<Target>:
    canvas:
        Color:
            rgb: (0.8,0.3,0.8)
        Rectangle:
            pos:(self.x, self.y)
            size: (self.width, self.height)
<Enemy>:
    canvas:
        Color:
            rgb: (0.8,0.3,0.3)
        Ellipse:
            pos:(self.x, self.y)
            size: (self.width, self.height)
<Bullet>:
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            pos:(self.x, self.y)
            size: (self.width, self.height)
<LevelEnd>:
    btn_gohome: gohome
    btn_nextlevel: nextlevel
    Label:
        text:"Back to studio?"
        size_hint: 0.6, 0.6
        pos_hint: {"x":0.2, "top":1}
    Button:
        id: gohome
        text: "Yes"
        size_hint: 0.2, 0.2
        pos_hint: {"x":0.2, "y":0.2}
        on_release:
            app.root.current = "studio"
    Button:
        id: nextlevel
        text: "No"
        size_hint:0.2,0.2
        pos_hint: {"x":0.4, "y":0.2}
        on_release:
            app.root.next_level_game()
