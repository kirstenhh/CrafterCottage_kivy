<Studio>:
    btn_battle: battle
    floor: floor_elem
    #wall: wall_elem
    Button:
        id: battle
        size_hint: 50,50
        pos: 700,500
        text: "Play game"
        on_release:
            app.root.current = "battle"
    Label:
        font_size: 40
        center_x: root.width / 4
        top: root.top - 50
        text: "Playtime"
    Floor:
        id: floor_elem
    Wall:
        id: wall_elem

<Floor>:
    p1: self.center_x-300,self.center_y-250
    p2: self.center_x-200,self.center_y-150
    p3: self.center_x+300,self.center_y-150
    p4: self.center_x+200,self.center_y-250
    canvas:
        Color:
            rgb: (0,0.5,0.2)
        Quad:
            group: 'a'
            points: self.p1 + self.p2 + self.p3 + self.p4
        Color:
            rgb:(1,1,1)
<Wall>:
    canvas:
        Color:
            rgb: (0.9,0.6,0.6)
        Quad:
            points: (self.center_x-300,self.center_y-250, self.center_x-300,self.center_y+150, self.center_x-200,self.center_y+250, self.center_x-200,self.center_y-150)
        Rectangle:
            pos: (self.center_x-200,self.center_y-150)
            size: 500,400
        Color:
            rgb: (0,0,0)
        Line:
            points: [self.center_x-200,self.center_y+250, self.center_x-200,self.center_y-150]
        Color:
            rgb:(1,1,1)


<Furniture>:
    drag_timeout: 100000
    drag_distance: 0
    drag_rectangle: self.x, self.y, self.width, self.height
    size_hint: None, None
    filterColor: 0,0,0,0
    ground: self.x,self.y,  self.x+self.width-(self.width//4),self.y,  self.x+self.width,self.y+(self.width//2), self.x+(self.width//4),self.y+(self.width//2)
    canvas:
        Rectangle:
            pos:self.pos
        Color:
            group: 'filter'
            rgba: self.filterColor
        Quad:
            group: 'filter'
            points: self.ground #(self.x,self.y,  self.x+self.width, self.y,  self.x+self.width,self.y+70, self.x,self.y+70)
        Color:
            rgba: 1,1,1,1
